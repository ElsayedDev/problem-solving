{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "Run All Tests",
      "command": "make",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Run all unit and integration tests"
    },
    {
      "type": "shell",
      "label": "Setup Test Environment",
      "command": "make",
      "args": ["setup"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Setup the testing environment"
    },
    {
      "type": "shell",
      "label": "Clean Test Build",
      "command": "make",
      "args": ["clean"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Clean test build files"
    },
    {
      "type": "shell",
      "label": "Test LeetCode Problems",
      "command": "make",
      "args": ["test-leetcode"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Run tests for LeetCode problems"
    },
    {
      "type": "shell",
      "label": "Test Codeforces Problems",
      "command": "make",
      "args": ["test-codeforces"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Run tests for Codeforces problems"
    },
    {
      "type": "shell",
      "label": "Test CodeChef Problems",
      "command": "make",
      "args": ["test-codechef"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "detail": "Run tests for CodeChef problems"
    }
  ],
  "version": "2.0.0"
}
